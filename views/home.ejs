<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Society Website</title>
    <link rel="shortcut icon" type="image/jpg" href="/images/clipart1135280.png" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500;1,600;1,700;1,900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+2&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/navbar/navlink.css">
    <script type="application/x-javascript">
        addEventListener("load", function() {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <link href="/home/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="/home/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/home/jquery.min.js"></script>
    <script type="text/javascript" src="/home/move-top.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function($) {
            $(".scroll").click(function(event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 1200);
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- <script>
        function location_lastmonth(){
            location.href="http://localhost:3000/admin/home/lastmonth";
        }
    </script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js" integrity="sha512-hZf9Qhp3rlDJBvAKvmiG+goaaKRZA6LKUO35oK6EsM0/kjPK32Yw7URqrq3Q+Nvbbt8Usss+IekL7CRn83dYmw==" crossorigin="anonymous"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light " id="home-nav" style="position:absolute;">
        <div class="container-fluid">
            <a class="navbar-brand">
                <img src="/images/clipart1135280.png" alt="logo" width="70%">
            </a>
            <button class=" navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarlist" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="d-flex">
                <div class="collapse navbar-collapse pull-right" id="navbarlist">
                    <div class="navbar-nav">
                        <a class="nav-link active r-link link text-underlined" id='1' aria-current="page" <%if(user.admin){%>href='/admin/home/alldetails' <%}else{%>href='/users/home/alldetails'
                                <%}%>>Home</a>
                        <a class="nav-link r-link link text-underlined" id='4' <%if(user.admin){%>href='/admin/payment'
                            <%}else{%>href='/users/payment' <%}%>>Payment
                        </a>
                        <a class="nav-link r-link link text-underlined" id='4' <%if(user.admin){%>href='/admin/complaint' <%}else{%>href='/users/complaint' <%}%>
                                    >Complaint</a>
                        <a class="nav-link active r-link link text-underlined" id='1' aria-current="page" <%if(user.admin){%>href='/admin/members' <%}else{%>href='/users/members' <%}%>>Members</a>
                        <a class="nav-link r-link link text-underlined" <%if(user.admin){%>href='/admin/aboutus'
                            <%}else{%>href='/users/aboutus' <%}%>>AboutUs
                        </a>
                        <a class="nav-link r-link link text-underlined" href="/users/logout">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/Living_Room.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/images/Second_room.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/images/imgonline-com-ua-resize-PJGglQ8ghBxJx.jpg" class="d-block w-100 op" alt="...">
            </div>
        </div>

    </div>

    <canvas class="container" id="myChart" height="400">

    </canvas>

    <%if(locals.payment){%>
        <div class="container-fluid mt-3">
            <h2 class="text-center" id="payment-heading">Payments</h2>
            <div class="mt-3 d-xl-flex justify-content-center">
                <button type="button" class="btn btn-primary" id="show_payment">Show Latest Month
                    Payment</button>
                <button type="button" class="btn btn-primary" id="show_all">Show All Payments</button>
            </div>
            <div class="row payment-container d-xl-flex flex-row justify-content-center">
                <% for(var i=0;i<payment.length;i++){%>
                    <div class="card" style="width: 30rem;">
                        <div class="card-body">
                            <h5 class="card-title">Payment</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Amount Done By
                                <%=payment[i].name%>
                            </li>
                            <li class="list-group-item">Payment of
                                <%=payment[i].amount%> Is Done
                            </li>
                            <li class="list-group-item">Payment Done On
                                <%=payment[i].date%>
                            </li>
                            <li class="list-group-item">Payment Done For Reason:
                                <%=payment[i].reason_for_payment%>
                            </li>
                        </ul>
                        <div class="card-body">
                            <a <%if(user.admin){%>href='/admin/payment' <%}else{%>href='/users/payment' <%}%>
                                        class="card-link">Add Payments</a>
                        </div>
                    </div>
                    <br>
                    <%}%>
            </div>
        </div>
        <%} else{%>
            <div class="container">
                <!-- Code Goes here If No Payments are there -->
                <h2 id="no-payment">No Payment Done From This Website <a <%if(user.admin){%>href='/admin/payment'
                        <%}else{%>href='/users/payment' <%}%>Click Here To Pay
                    </a> </h2>
            </div>
            </div>
            <%}%>
                <div class="arrow1">
                    <a href="#services" class="scroll"><img src="/images/arrow1.png" alt="" /></a>
                </div>
                <!-- portfolio-section-ends -->
                <div class="services-section" id="services">
                    <div class="container">
                        <div class="services-header">
                            <h3>services</h3>
                            <p>Our Website provides many services for a member of society such as contactless payment system, Complaint management system and member details viewing system </p>
                        </div>
                        <div class="services-sectiongrids">
                            <div class="col-md-4 services-grid">
                                <img src="/images/img1.png" alt="" />
                                <h4>Payment Management</h4>
                                <p>In cashless transactions, payments are made or accepted without the use of hard cash. This includes payments made via credit/debit cards, cheques, DD, NEFT, RTGS or any other form of online payment that removes the need
                                    for cash.
                                </p>
                            </div>
                            <div class="col-md-4 services-grid">
                                <img src="/images/img2.png" alt="" />
                                <h4>Complaint Management</h4>
                                <p>Complaint management is the process of handling, managing, responding to, and reporting customer grievances. This process requires a streamlined approach and constant monitoring to ensure faster resolutions.
                                </p>
                            </div>
                            <div class="col-md-4 services-grid">
                                <img src="/images/img3.png" alt="" />
                                <h4>Member Details</h4>
                                <p>Our site helps tells you details of all the members in the society so you can know each other better.
                                </p>
                            </div>
                            <div class="clearfix"></div>
                            <div class="arrow1">
                                <a href="#contact" class="scroll"><img src="/images/arrow1.png" alt="" /></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="game">
                    <a <%if(user.admin){%>href='/admin/game' <%}else{%>href='/users/game' <%}%>
                                class="game">Game 1</a>
                </div>
                <!-- services-section-ends -->
                </div>
                <div class="footer-section" id="contact">
                    <div class="container">
                        <div class="contact-header">
                            <h3> contact</h3>
                            <p></p>
                        </div>

                        <div class="contact">
                            <form>
                                <div class="col-md-4 contactgrid">
                                    <input id="contact_name" type="text" class="text" value="name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'name';}">
                                </div>
                                <div class="col-md-4 contactgrid">
                                    <input id="contact_email" type="text" class="text" value="email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'email';}">
                                </div>
                                <div class="col-md-4 contactgrid">
                                    <input id="contact_phone" type="text" class="text" value="phone" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'phone';}">
                                </div>
                                <div class="col-md-8 contactgrid1">
                                    <textarea id="contact_message" minlength="10" onfocus="if(this.value == 'Your Message') this.value='';" onblur="if(this.value == '') this.value='Your Message';">Your Message</textarea>
                                </div>
                                <div class="col-md-4 contactgrid2">
                                    <input type="submit" value="[send message]" id="send_message">
                                </div>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                        <div class="footer-bottom">

                            <p>&copy; 2021 . All rights Reserved </p>

                        </div>
                        <a href="#" id="toTop" style="display: block;"> <span id="toTopHover" style="opacity: 1;">
                            </span></a>
                    </div>

                </div>
                </div>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
                <script src="/navbar/navbar.js" type="text/javascript"></script>
                <script src="/home/jquery_home.js"></script>
                <script>
                    var payment_n = 0;
                    var ctx = document.getElementById('myChart').getContext('2d');
                    var payment_n = '<%- JSON.stringify(p_no) %>';
                    var complaint_n = '<%- JSON.stringify(c_no) %>';
                    var resolve_n = '<%- JSON.stringify(r_no) %>';
                    console.log(complaint_n);
                    var myChart = new Chart(ctx, {
                        type: 'horizontalBar',
                        data: {
                            labels: ['Payments Done', 'Complaints Pending', 'Complaints Resolved'],
                            datasets: [{
                                data: [payment_n, complaint_n, resolve_n],
                                backgroundColor: [
                                    'lightblue',
                                    'lightyellow',
                                    'lightgreen'
                                ],
                                borderColor: [
                                    'black',
                                    'black',
                                    'black'
                                ],
                                borderWidth: 1,
                                hoverBorderWidth: 3
                            }]
                        },
                        options: {
                            title: {
                                display: true,
                                text: "Management Bar Chart",
                                fontSize: 25,
                                fontColor: "darkblack",
                                fontfamily: 'Baloo 2 Cursive'
                            },
                            legend: {
                                display: false
                            },
                            scales: {
                                xAxes: [{
                                    gridLines: {
                                        // display: false
                                        color: "lightgray"
                                    },
                                    ticks: {
                                        beginAtZero: true,
                                        fontStyle: "bold",
                                        fontSize: 20,
                                        fontColor: "green"
                                    },

                                }],
                                yAxes: [{
                                    gridLines: {
                                        display: false
                                    },
                                    ticks: {
                                        beginAtZero: true,
                                        fontStyle: "bold",
                                        fontSize: 20,
                                        fontColor: "blue"
                                    },
                                    barPercentage: 0.5
                                }]
                            },
                            layout: [{}]
                        }
                    });
                </script>
</body>

</html>